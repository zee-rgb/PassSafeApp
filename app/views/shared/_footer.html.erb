<footer class="mt-auto border-t border-gray-200 bg-white">
  <div class="container mx-auto px-4 py-6">
    <div class="flex flex-col md:flex-row justify-between items-center gap-4">
      <div class="flex flex-col md:flex-row items-center gap-4">
        <div class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-5 text-indigo-600">
            <path fill-rule="evenodd" d="M12 1.5a5.25 5.25 0 0 0-5.25 5.25v3a3 3 0 0 0-3 3v6.75a3 3 0 0 0 3 3h10.5a3 3 0 0 0 3-3v-6.75a3 3 0 0 0-3-3v-3c0-2.9-2.35-5.25-5.25-5.25Zm3.75 8.25v-3a3.75 3.75 0 1 0-7.5 0v3h7.5Z" clip-rule="evenodd"/>
          </svg>
          <span class="font-semibold text-gray-800"><%= t("app.name") %></span>
        </div>
        <div class="text-sm text-gray-600">
          &copy; <%= Date.current.year %> <%= t("app.name") %>. <%= t("footer.rights") %>
        </div>
      </div>

      <div class="flex flex-wrap justify-center md:justify-end gap-6 text-sm">
        <%= link_to t("nav.privacy"), privacy_path, class: "text-gray-600 hover:text-indigo-600 transition-colors" %>
        <%= link_to t("nav.terms"), terms_path, class: "text-gray-600 hover:text-indigo-600 transition-colors" %>
        <%= link_to t("nav.security"), security_path, class: "text-gray-600 hover:text-indigo-600 transition-colors" %>
        <%= link_to t("nav.help"), help_path, class: "text-gray-600 hover:text-indigo-600 transition-colors" %>
      </div>
    </div>

    <div class="mt-6 pt-4 border-t border-gray-100">
      <div class="flex flex-col md:flex-row justify-between items-center gap-2 text-xs text-gray-500">
        <div>
          <%= t("footer.encryption_note") %>
        </div>
        <div>
          Version 1.0.0
        </div>
      </div>
    </div>
  </div>
</footer>
