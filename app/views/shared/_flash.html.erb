<% if notice.present? %>
  <div class="mb-3 rounded-md border border-blue-200 bg-blue-50 px-4 py-2 text-sm text-blue-800">
    <%= notice %>
  </div>
<% end %>

<% if alert.present? %>
  <div class="mb-3 rounded-md border border-red-200 bg-red-50 px-4 py-2 text-sm text-red-800">
    <%= alert %>
  </div>
<% end %>
