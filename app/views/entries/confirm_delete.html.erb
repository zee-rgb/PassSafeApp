<div class="container mx-auto px-4 py-8">
  <div class="bg-white rounded-lg shadow-md p-6 max-w-2xl mx-auto">
    <h1 class="text-2xl font-bold text-gray-900 mb-4">Confirm Deletion</h1>
    <p class="text-gray-700 mb-6">
      You are about to permanently delete this entry. This action cannot be undone.
    </p>

    <div class="border border-red-200 rounded-md p-4 bg-red-50 mb-6">
      <h2 class="text-lg font-semibold text-red-800 mb-2"><%= @entry.name %></h2>
      <dl class="text-sm text-red-900 space-y-1">
        <div class="flex gap-2"><dt class="font-medium w-24">Website:</dt><dd class="flex-1 truncate"><%= @entry.url %></dd></div>
        <div class="flex gap-2"><dt class="font-medium w-24">Username:</dt><dd class="flex-1 truncate">••••••••</dd></div>
        <div class="flex gap-2"><dt class="font-medium w-24">Password:</dt><dd class="flex-1 truncate">••••••••</dd></div>
      </dl>
    </div>

    <div class="flex items-center justify-between">
      <%= link_to "Cancel", entry_path(@entry), class: "rounded-md bg-white px-4 py-2 text-sm font-semibold text-gray-900 shadow-sm border border-gray-300 hover:bg-gray-50" %>
      <%= form_with model: @entry, url: entry_path(@entry), method: :delete do |f| %>
        <%= f.submit "Delete Entry", class: "rounded-md bg-red-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-700" %>
      <% end %>
    </div>
  </div>
</div>
