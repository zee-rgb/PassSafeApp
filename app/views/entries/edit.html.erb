<div class="container mx-auto px-4 py-8">
  <div class="bg-white rounded-lg shadow-md p-6">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">Edit Entry</h1>

    <%= form_with(model: @entry, class: "space-y-6") do |form| %>
      <% if @entry.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @entry.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div>
        <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>

      <div>
        <%= form.label :url, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.url_field :url, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>

      <div>
        <%= form.label :username, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :username, value: nil, placeholder: "Set a new username (hidden)", autocomplete: "off", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        <p class="mt-1 text-xs text-gray-500">Current value is hidden for security. Leave blank to keep unchanged.</p>
      </div>

      <div>
        <%= form.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.password_field :password, placeholder: "Set a new password", autocomplete: "new-password", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        <p class="mt-1 text-xs text-gray-500">Leave blank to keep unchanged.</p>
      </div>

      <div class="flex items-center justify-between pt-4">
        <div class="flex gap-3">
          <%= form.submit "Update Entry", class: "rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-700" %>
          <%= link_to "Cancel", entry_path(@entry), class: "rounded-md bg-white px-4 py-2 text-sm font-semibold text-gray-900 shadow-sm border border-gray-300 hover:bg-gray-50" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
