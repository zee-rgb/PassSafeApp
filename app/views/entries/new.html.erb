<div class="max-w-2xl mx-auto">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Add New Password Entry</h1>
    <p class="text-gray-600">Securely store your login credentials for easy access.</p>
  </div>

  <div class="card">
    <div class="card-body">
      <% if @entry.errors.any? %>
        <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-md">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                Please fix the following errors:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @entry.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <%= form_with model: @entry, local: true, class: "space-y-6" do |form| %>
        <div>
          <%= form.label :name, "Service/Website Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :name,
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors",
              placeholder: "e.g., Gmail, Facebook, Netflix" %>
        </div>

        <div>
          <%= form.label :url, "Website URL", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.url_field :url,
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors",
              placeholder: "https://example.com" %>
        </div>

        <div>
          <%= form.label :username, "Username/Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :username,
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors",
              placeholder: "username or email@example.com" %>
        </div>

        <div>
          <%= form.label :password, "Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.password_field :password,
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors",
              placeholder: "Enter your password" %>
        </div>

        <div class="flex items-center justify-between pt-4 border-t border-gray-200">
          <%= link_to "Cancel", new_entry_path, class: "text-sm font-medium text-gray-500 hover:text-gray-700 transition-colors" %>
          <%= form.submit "Save Entry",
              class: "rounded-md bg-indigo-600 px-6 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
